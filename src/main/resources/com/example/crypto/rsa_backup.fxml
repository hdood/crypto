    <Button fx:id="generateButton" layoutX="18.0" layoutY="216.0" onAction="#generate" prefHeight="40.0" prefWidth="173.0" style="-fx-cursor: hand;" text="Generate Key">

        <styleClass>

            <String fx:value="btn" />
            <String fx:value="btn-primary" />

        </styleClass>

    </Button>
    <TextField fx:id="input" layoutX="21.0" layoutY="332.0" prefHeight="34.0" prefWidth="173.0" />
