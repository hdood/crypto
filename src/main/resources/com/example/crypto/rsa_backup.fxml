    <Label layoutX="21.0" layoutY="316.0" prefHeight="16.0" prefWidth="53.0" text="Input" />
    <Label layoutX="300.0" layoutY="316.0" prefHeight="16.0" prefWidth="53.0" text="Output" />
    <Label layoutX="19.0" layoutY="381.0" prefHeight="16.0" prefWidth="467.0" text="Public Key" />
    <TextField fx:id="publicKey" layoutX="18.0" layoutY="404.0" prefHeight="34.0" prefWidth="467.0" />
    <Label layoutX="20.0" layoutY="451.0" prefHeight="16.0" prefWidth="467.0" text="Private Key" />
    <TextField fx:id="privateKey" layoutX="19.0" layoutY="474.0" prefHeight="34.0" prefWidth="467.0" />
    <Label focusTraversable="false" layoutX="14.0" layoutY="108.0" prefHeight="16.0" prefWidth="330.0" text="Key Generation">
        <font>
            <Font name="System Bold" size="19.0" />
        </font>
    </Label>
    <TextField fx:id="keyName" layoutX="15.0" layoutY="167.0" prefHeight="34.0" prefWidth="173.0" />
    <Label layoutX="15.0" layoutY="147.0" prefHeight="16.0" prefWidth="109.0" text="Key Name" />
    <Label layoutX="14.0" layoutY="264.0" prefHeight="16.0" prefWidth="330.0" text="Encryption and Decryption">
        <font>
            <Font name="System Bold" size="19.0" />
        </font>
    </Label>
    <Label fx:id="message" layoutX="104.0" layoutY="23.0" prefHeight="40.0" prefWidth="600.0" text="Message encrypted successfully" visible="false">
        <styleClass>
            <String fx:value="alert" />
            <String fx:value="alert-success" />
        </styleClass>
    </Label>
    <Label fx:id="error" layoutX="118.0" layoutY="23.0" prefHeight="40.0" prefWidth="600.0" text="Error" visible="false">
        <styleClass>
            <String fx:value="alert" />
            <String fx:value="alert-danger" />
        </styleClass>
    </Label>
    <HBox layoutX="504.0" layoutY="58.0" prefHeight="100.0" prefWidth="200.0" />

</AnchorPane>
